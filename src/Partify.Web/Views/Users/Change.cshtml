@using Partify.Web.Models.Users

@model UserChangeRoleModel

@{
    ViewData["Title"] = "Change Role";
}

<h2>Change Role</h2>

<form asp-controller="Users" method="post" asp-action="Change">

    <h3>@Model.Fullname</h3>

    <div class="form-group">
        <label asp-for="RoleId" class="control-label">User Role</label>
        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(ViewBag.UserRoles, "Id", "Name"))"></select>
        <input type="hidden" asp-for="UserId" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success btn-block">CREATE</button>
    </div>
</form>