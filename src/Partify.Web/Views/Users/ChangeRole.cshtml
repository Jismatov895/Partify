@model UserSelectRoleModel

<div class="container mt-5">
    <form asp-controller="Users" asp-action="ChangeRole">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>User create</h1>
                <div class="form-outline mb-4">
                    <select class="form-select" id="selected" asp-for="UserRoleId" required asp-items="Model.SelectRole.UserRoles" aria-label="Default select example">
                        <option class="mystyle" selected>Select Role</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success btn-block">SUBMIT</button>
            </div>
        </div>
    </form>
</div>