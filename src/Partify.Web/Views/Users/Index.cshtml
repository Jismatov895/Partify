@using Partify.Web.Models.Users
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "User";
}

<div class="mb-3">
    <button type="button" class="btn btn-success btn-rounded" data-mdb-ripple-init>Create</button>
</div>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Phone</td>
                <td>@user.Email</td>
                <td>@user.Role.Name</td>
                <td>
                    <button type="button" class="btn btn-info btn-rounded" data-mdb-ripple-init>Edit</button>
                    <button type="button" class="btn btn-danger btn-rounded" data-mdb-ripple-init>Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>