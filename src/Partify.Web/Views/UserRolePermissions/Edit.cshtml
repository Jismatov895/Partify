@using Partify.Web.Models.UserRolePermissions
@model UserRolePermissionCreateModel

@{
    ViewData["Title"] = "Edit User Role Permission";
}

<h2>Edit User Role Permission</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="UserRoleId" class="control-label">User Role</label>
        <select asp-for="UserRoleId" class="form-control" asp-items="@(new SelectList(ViewBag.UserRoles, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="PermissionId" class="control-label">Permission</label>
        <select asp-for="PermissionId" class="form-control" asp-items="@(new SelectList(ViewBag.Permissions, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-controller="UserRolePermissions" asp-action="Index">Back to List</a>
</div>
