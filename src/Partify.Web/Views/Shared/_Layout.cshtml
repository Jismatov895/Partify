<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Partify.Web</title>
    <link rel="stylesheet" href="~/lib/mdb5/css/mdb.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Partify.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center text-white mb-4"><i ></i>Partify</h4>
        <a asp-controller="Users" asp-action="Index" class="active"><i class="fas fa-home"></i> User</a>
        <a asp-controller="Users" asp-action="Index"><i class="fas fa-tachometer-alt"></i> User Role</a>
        <a asp-controller="Users" asp-action="Index"><i class="fas fa-th-large"></i> Permission</a>
        <a asp-controller="Users" asp-action="Index"><i class="fas fa-box"></i> Role Permission</a>
        <a asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i> Customers</a>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>
    <script src="~/lib/mdb5/js/mdb.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .sidebar {
        height: 100vh;
        width: 250px;
        position: fixed;
        background-color: #343a40;
        padding-top: 20px;
    }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 10px;
            display: block;
            margin: 5px 0;
        }

            .sidebar a:hover, .sidebar a.active {
                background-color: #007bff;
            }

            .sidebar a i {
                margin-right: 10px;
            }

    .content {
        margin-left: 250px;
        padding: 20px;
    }
</style>